{
  "parser": "babel-eslint",
  "extends": ["standard", "standard-react"],
  "env": {
    "es6": true,
    "jest": true
  },
  "plugins": ["react"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-single"],
    "comma-dangle": "off",
    "space-before-function-paren": "off",
    "react/jsx-boolean-value": 0
  }
}
